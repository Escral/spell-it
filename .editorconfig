root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
ij_javascript_spaces_within_imports = true
max_line_length = 120

[*.vue]
ij_vue_indent_children_of_top_level = template,script

[{*.ts,*.tsx}]
ij_typescript_enforce_trailing_comma = whenmultiline
ij_typescript_if_brace_force = always
ij_typescript_use_double_quotes = false
ij_typescript_use_public_modifier = true
ij_typescript_use_semicolon_after_statement = false
ij_typescript_while_brace_force = always
ij_typescript_force_quote_style = false
ij_typescript_spaces_within_imports = true
ij_typescript_spaces_within_object_literal_braces = true

[{*.js,*.cjs,*.mjs}]
ij_javascript_enforce_trailing_comma = whenmultiline
ij_javascript_if_brace_force = always
ij_javascript_use_double_quotes = false
ij_javascript_use_public_modifier = true
ij_javascript_use_semicolon_after_statement = false
ij_javascript_while_brace_force = always
ij_javascript_force_quote_style = false
ij_javascript_spaces_within_object_literal_braces = true

[*.css]
ij_css_blank_lines_around_nested_selector = 1
ij_css_blank_lines_between_blocks = 1
ij_css_brace_placement = end_of_line
ij_css_keep_blank_lines_in_code = 2
ij_css_keep_single_line_blocks = false
ij_css_space_after_colon = true
ij_css_space_before_opening_brace = true
ij_css_use_double_quotes = true

[*.scss]
ij_scss_blank_lines_around_nested_selector = 1
ij_scss_blank_lines_between_blocks = 1
ij_scss_keep_blank_lines_in_code = 2
ij_scss_keep_single_line_blocks = false
ij_scss_space_after_colon = true
ij_scss_space_before_opening_brace = true
ij_scss_use_double_quotes = true

[*.json]
ij_json_array_wrapping = split_into_lines
ij_json_keep_blank_lines_in_code = 1
ij_json_keep_indents_on_empty_lines = false
ij_json_keep_line_breaks = true
ij_json_keep_trailing_comma = false
ij_json_object_wrapping = split_into_lines
ij_json_space_after_colon = true
ij_json_space_after_comma = true
ij_json_space_before_colon = false
ij_json_space_before_comma = false
ij_json_spaces_within_braces = false
ij_json_spaces_within_brackets = false
ij_json_wrap_long_lines = false

[{*.htm,*.html,*.ng,*.sht,*.shtm,*.shtml}]
ij_html_add_new_line_before_tags = body,div,p,form,h1,h2,h3
ij_html_align_attributes = true
ij_html_attribute_wrap = normal
ij_html_do_not_indent_children_of_tags = html,body,thead,tbody,tfoot
ij_html_quote_style = double

[{*.markdown,*.md}]
ij_markdown_force_one_space_after_blockquote_symbol = true
ij_markdown_force_one_space_after_header_symbol = true
ij_markdown_force_one_space_after_list_bullet = true
ij_markdown_force_one_space_between_words = true
ij_markdown_format_tables = true
ij_markdown_insert_quote_arrows_on_wrap = true
ij_markdown_keep_indents_on_empty_lines = false
ij_markdown_keep_line_breaks_inside_text_blocks = true
ij_markdown_max_lines_around_block_elements = 1
ij_markdown_max_lines_around_header = 1
ij_markdown_max_lines_between_paragraphs = 1
ij_markdown_min_lines_around_block_elements = 1
ij_markdown_min_lines_around_header = 1
ij_markdown_min_lines_between_paragraphs = 1
ij_markdown_wrap_text_if_long = true
ij_markdown_wrap_text_inside_blockquotes = true

[{*.yaml,*.yml}]
indent_size = 2